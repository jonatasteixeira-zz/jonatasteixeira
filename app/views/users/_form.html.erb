<%= form_for(@user, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h4>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.text_field :name, :placeholder => "Name", :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.text_field :username, :placeholder => "Username", :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.email_field :email, :placeholder => "Email", :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.password_field :password, :placeholder => "Password", :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.password_field :password_confirmation, :placeholder => "Password confirmation", :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.select :role_id, options_for_select(@roles.collect{ |u| [u.name, u.id] }), {}, {:class => "form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.submit :class => "btn btn-lg btn-primary btn-block" %>
    </div>
  </div>
<% end %>
