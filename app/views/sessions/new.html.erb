<h1 class="form-signin-heading">Please sign in</h1>

<div class="well" style="max-width: 400px; margin: 0 auto 10px;">
  <%= form_for(:login) do |f| %>
    <div class="field">
      <%= f.text_field :username_or_email, :placeholder => "Username or email", :class => "form-control" %>
    </div>
    <div class="field">
      <%= f.password_field :password, :placeholder => "Password", :class => "form-control" %>
    </div>
    <div class="btn-block">
      <%= f.check_box :remember_me, {:checked => "checked"} %> 
      <%= f.label :remember_me %>
    </div>
    <div class="actions">
      <%= f.submit "Sign in", :class => "btn btn-lg btn-success btn-block" %>
      <%= link_to "Sign up", new_user_path, :class => "btn btn-lg btn-primary btn-block", :style => "color:#FFF !important;" %> 
    </div>
  <% end %>
</div>
