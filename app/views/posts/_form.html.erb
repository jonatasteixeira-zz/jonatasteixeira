
<%= form_for @post, :html => { :class => "form-horizontal" } do |f| %>
  <% if @post.errors.any? %>
    <div id="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h4>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, :placeholder => "Title", :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :body, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :body, :rows => "5", :placeholder => "Input you post here...", :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Save post", :class => "btn ibtn-lg btn-success" %>
    </div>
  </div>

<% end %>
